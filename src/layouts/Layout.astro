---
export interface Props {
  title: string;
}

const { title = "Nutrify" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
  </head>
  <body class="bg-gradient-to-r from-green-800 from-60% to-green-700 min-h-screen flex flex-col">
    <header class="flex justify-between items-center p-5">
      <h1 class="text-6xl font-bold">
        <span class="text-white">Nutr</span><span class="text-[#5fe30d]">ify</span>
      </h1>

      <nav>
        <ul class="flex space-x-6">
          <li><a href="#" class="text-lg text-[#F9F6EE] hover:text-[#5fe30d] transition duration-300">Micronutrients</a></li>
          <li><a href="/macronutrients" class="text-lg text-[#F9F6EE] hover:text-[#5fe30d] transition duration-300">Macronutrients</a></li>
          <li><a href="#" class="text-lg text-[#F9F6EE] hover:text-[#5fe30d] transition duration-300">Calorie Tracker</a></li>
          <li><a href="#" class="text-lg text-[#F9F6EE] hover:text-[#5fe30d] transition duration-300">About</a></li>
        </ul>
      </nav>
    </header>

    <main class="flex-grow">
      <slot />
    </main>
    
    <footer class="py-6 bg-green-900 text-green-100">
      <div class="max-w-6xl mx-auto px-6 md:px-10">
        <div class="flex flex-col md:flex-row justify-between items-center">
          <div class="mb-6 md:mb-0 ml-4">
            <h2 class="text-2xl font-bold ">
              <span class="text-white">Nutr</span><span class="text-[#5fe30d]">ify</span>
            </h2>
            <p class="mt-2">Your guide to better nutrition.</p>
          </div>
		  <div class="mt-8 text-center text-sm ">
			&copy; 2025 Nutrify. All rights reserved.
		  </div>
          <div class="flex space-x-6  mr-4">
            <a href="#" class="hover:text-[#5fe30d] transition duration-300">Terms</a>
            <a href="#" class="hover:text-[#5fe30d] transition duration-300">Privacy</a>
            <a href="#" class="hover:text-[#5fe30d] transition duration-300">Contact</a>
          </div>
		
        </div>
        
      </div>
    </footer>
  </body>
</html>